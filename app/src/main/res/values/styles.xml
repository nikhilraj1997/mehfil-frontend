<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/offBlack</item>
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/darkGrey</item>
        <item name="colorOnBackground">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/offBlack</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:displayOptions">useLogo</item>

        <item name="materialButtonStyle">@style/Widget.AppTheme.ButtonTextAppearance</item>
    </style>
    
    <style name="Widget.AppTheme.ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Widget.AppTheme.CircularProgressDrawableAppearance" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@color/primaryColor</item>
    </style>

</resources>
